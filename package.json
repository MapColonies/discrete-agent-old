{
  "name": "discrete-agent",
  "version": "1.6.0",
  "description": "This is template for map colonies typescript service",
  "main": "./src/index.ts",
  "scripts": {
    "test:unit": "jest --config=./tests/configurations/unit/jest.config.js",
    "test:integration": "jest --config=./tests/configurations/integration/jest.config.js",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "prelint:fix": "npm run prettier:fix",
    "lint:openapi": "openapi lint ./openapi3.yaml",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "standard-version",
    "test": "npm run test:unit && npm run test:integration",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json  && npm run assets:copy",
    "start": "npm run build && cd dist && node ./index.js",
    "assets:copy": "copyfiles -f ./config/* ./dist/config && copyfiles -f ./openapi3.yaml ./dist/ && copyfiles ./package.json dist",
    "clean": "rimraf dist"
  },
  "directories": {
    "test": "tests"
  },
  "author": "MapColonies",
  "license": "ISC",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "pre-commit": "pretty-quick --staged",
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@map-colonies/error-express-handler": "^1.2.0",
    "@map-colonies/mc-logger": "^2.0.2",
    "@map-colonies/mc-model-types": "^10.2.5",
    "@map-colonies/mc-probe": "^1.0.0",
    "@turf/turf": "^6.5.0",
    "async-lock": "^1.3.0",
    "async-retry": "^1.3.3",
    "aws-sdk": "^2.1075.0",
    "axios": "^0.21.3",
    "axios-retry": "^3.1.9",
    "config": "^3.3.4",
    "express": "^4.17.3",
    "express-openapi-validator": "^4.12.15",
    "http-status-codes": "^2.1.4",
    "js-yaml": "^3.14.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "reflect-metadata": "^0.1.13",
    "shapefile": "^0.6.6",
    "swagger-ui-express": "^4.1.6",
    "tsyringe": "^4.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^10.0.0",
    "@map-colonies/eslint-config": "^2.2.0",
    "@map-colonies/standard-version-update-openapi3-version": "^0.0.2",
    "@redocly/openapi-cli": "^1.0.0-beta.25",
    "@types/async-lock": "^1.1.3",
    "@types/async-retry": "^1.4.2",
    "@types/config": "^0.0.38",
    "@types/express": "^4.17.11",
    "@types/geojson": "^7946.0.7",
    "@types/jest": "^27.0.2",
    "@types/js-yaml": "^3.12.5",
    "@types/lodash": "^4.14.168",
    "@types/multer": "^1.4.5",
    "@types/proj4": "^2.5.0",
    "@types/shapefile": "^0.6.0",
    "@types/supertest": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/yamljs": "^0.2.31",
    "commitlint": "^9.1.2",
    "copyfiles": "^2.3.0",
    "cz-conventional-changelog": "^3.0.1",
    "eslint": "^7.32.0",
    "husky": "^4.2.5",
    "jest": "^27.2.4",
    "jest-create-mock-instance": "^1.1.0",
    "jest-html-reporters": "^2.0.3",
    "jest-mock-axios": "^4.3.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.0.0",
    "supertest": "^6.0.1",
    "ts-jest": "^27.0.5",
    "typescript": "^3.8.3"
  }
}
