{
  "openapiConfig": {
    "filePath": "./openapi3.yaml",
    "basePath": "/docs",
    "jsonPath": "/api.json",
    "uiPath": "/api"
  },
  "logger": {
    "level": "info"
  },
  "server": {
    "port": "8080"
  },
  "mountDir": "/layerSources",
  "watcher": {
    "watchDirectory": "watch/**/*",
    "watchOptions": {
      "depth": 2,
      "persistent": true,
      "useFsEvents": false,
      "usePolling": true,
      "interval": 1000,
      "awaitWriteFinish": {
        "stabilityThreshold": 2000,
        "pollInterval": 100
      }
    }
  },
  "overseer": {
    "url": "http://127.0.0.1:8081"
  },
  "agentDB": {
    "url": "http://127.0.0.1:8082"
  },
  "externalReadinessUrl": "",
  "httpRetry": {
    "attempts": 5,
    "delay": "exponential",
    "shouldResetTimeout": true
  }
}
