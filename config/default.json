{
  "openapiConfig": {
    "filePath": "./openapi3.yaml",
    "basePath": "/docs",
    "jsonPath": "/api.json",
    "uiPath": "/api"
  },
  "logger": {
    "level": "info"
  },
  "server": {
    "port": "8080"
  },
  "watcher": {
    "watchDirectory": "/watch/**/*.shp",
    "watchOptions": {
      "depth": 2,
      "awaitWriteFinish": true,
      "persistent": true,
      "useFsEvents": false,
      "usePolling": true
    }
  }
}
